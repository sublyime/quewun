{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WPF App",
            "type": "shell",
            "command": "dotnet",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/DataQuill.Desktop"
            },
            "problemMatcher": "$msCompile",
            "detail": "Build the DataQuill Desktop WPF application"
        },
        {
            "label": "Run WPF App",
            "type": "shell",
            "command": "dotnet",
            "args": ["run"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/DataQuill.Desktop"
            },
            "problemMatcher": [],
            "detail": "Run the DataQuill Desktop WPF application",
            "dependsOn": "Build WPF App"
        },
        {
            "label": "Clean WPF App",
            "type": "shell",
            "command": "dotnet",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/DataQuill.Desktop"
            },
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "Restore Packages",
            "type": "shell",
            "command": "dotnet",
            "args": ["restore"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/DataQuill.Desktop"
            },
            "problemMatcher": [],
            "detail": "Restore NuGet packages"
        }
    ]
}