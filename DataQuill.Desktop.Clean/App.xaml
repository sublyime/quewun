<Application x:Class="DataQuillDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataQuillDesktop"
             xmlns:converters="clr-namespace:DataQuillDesktop.Converters"
             StartupUri="MainWindow.xaml"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Custom Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
            <!-- Other converters temporarily commented out to isolate issues
            <converters:SectionToVisibilityConverter x:Key="SectionToVisibilityConverter"/>
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
            <converters:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
            <converters:MessageTypeToColorConverter x:Key="MessageTypeToColorConverter"/>
            <converters:StatusColorConverter x:Key="StatusColorConverter"/>
            <converters:MessageTypeColorConverter x:Key="MessageTypeColorConverter"/>
            -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
