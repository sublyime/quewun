<Application x:Class="DataQuillDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataQuillDesktop"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:DataQuillDesktop.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Material Design Themes -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Bundle Theme -->
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom Converters -->
            <converters:SectionToVisibilityConverter x:Key="SectionToVisibilityConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
