<Window x:Class="DataQuillDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DataQuillDesktop.Views"
        Title="DataQuill Desktop - Simple Test"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="DarkBlue"
                Height="60">
            <TextBlock Text="DataQuill Desktop - Working!"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="LightGray">
                <StackPanel Margin="10">
                    <Button Name="DashboardBtn"
                            Content="Dashboard"
                            Height="40"
                            Margin="0,5"
                            Click="NavigateToSection"/>
                    <Button Name="ConfigureBtn"
                            Content="Configure"
                            Height="40"
                            Margin="0,5"
                            Click="NavigateToSection"/>
                    <Button Name="ReportsBtn"
                            Content="Reports"
                            Height="40"
                            Margin="0,5"
                            Click="NavigateToSection"/>
                    <Button Name="StorageBtn"
                            Content="Storage"
                            Height="40"
                            Margin="0,5"
                            Click="NavigateToSection"/>
                    <Button Name="UsersBtn"
                            Content="Users"
                            Height="40"
                            Margin="0,5"
                            Click="NavigateToSection"/>
                    <Button Name="TerminalBtn"
                            Content="Terminal"
                            Height="40"
                            Margin="0,5"
                            Click="NavigateToSection"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Border Grid.Column="1"
                    Background="White">
                <Grid>
                    <!-- Welcome Text -->
                    <TextBlock Name="ContentDisplay"
                               Text="Welcome to DataQuill Desktop! Click a section on the left to get started."
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Foreground="DarkBlue"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="20"/>

                    <!-- Dashboard View -->
                    <views:DashboardView x:Name="DashboardPanel"
                                         Visibility="Collapsed"/>
                    <!-- Configure View -->
                    <views:ConfigureView x:Name="ConfigurePanel"
                                         Visibility="Collapsed"/>
                    <!-- Reports View -->
                    <views:ReportsView x:Name="ReportsPanel"
                                       Visibility="Collapsed"/>
                    <!-- Storage View -->
                    <views:StorageView x:Name="StoragePanel"
                                       Visibility="Collapsed"/>
                    <!-- Users View -->
                    <views:UserAdminView x:Name="UsersPanel"
                                         Visibility="Collapsed"/>
                    <!-- Terminal View -->
                    <views:TerminalView x:Name="TerminalPanel"
                                        Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>