<Window x:Class="DataQuillDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:DataQuillDesktop.ViewModels"
        xmlns:converters="clr-namespace:DataQuillDesktop.Converters"
        Title="DataQuill Desktop"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="#ecf0f1"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="20,15"/>
            <Setter Property="HorizontalAlignment"
                    Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Left"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3498db"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#2980b9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="#34495e">
            <Grid>
                <StackPanel Margin="0,20,0,0">
                    <!-- Logo/Title -->
                    <StackPanel Margin="20,10,20,30">
                        <TextBlock Text="DataQuill"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Desktop"
                                   FontSize="14"
                                   Foreground="#bdc3c7"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Navigation Buttons -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">

                            <!-- Dashboard -->
                            <Button Name="DashboardBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="DashboardBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Š"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Dashboard"/>
                                </StackPanel>
                            </Button>

                            <!-- Data Sources -->
                            <Button Name="DataSourcesBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="DataSourcesBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”Œ"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Data Sources"/>
                                </StackPanel>
                            </Button>

                            <!-- Storage -->
                            <Button Name="StorageBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="StorageBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’¾"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Storage"/>
                                </StackPanel>
                            </Button>

                            <!-- Reports -->
                            <Button Name="ReportsBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="ReportsBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Š"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Reports"/>
                                </StackPanel>
                            </Button>

                            <!-- Terminal -->
                            <Button Name="TerminalBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="TerminalBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’»"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Terminal"/>
                                </StackPanel>
                            </Button>

                            <!-- User Admin -->
                            <Button Name="UserAdminBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="UserAdminBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¥"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="User Admin"/>
                                </StackPanel>
                            </Button>

                            <!-- Users -->
                            <Button Name="UsersBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="UsersBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¤"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Users"/>
                                </StackPanel>
                            </Button>

                            <!-- Debug: Enhanced Modbus -->
                            <Button Name="EnhancedModbusBtn"
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="EnhancedModbusBtn_Click"
                                    Background="#e74c3c"
                                    Margin="0,20,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸš€"
                                               FontSize="16"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="Force Enhanced Modbus"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#e9ecef"
                    Padding="20">
                <Grid>
                    <TextBlock x:Name="WelcomeText"
                               Text="Welcome to DataQuill Desktop"
                               FontSize="16"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Foreground="#495057"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentControl Grid.Row="1"
                            Margin="20"
                            x:Name="MainContentControl">
                <!-- Default Welcome Content -->
                <Border Background="LightGray"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Welcome to DataQuill Desktop"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="CurrentSectionDisplay"
                                   Text="Current Section: Dashboard"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click sidebar buttons to navigate"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </ContentControl>

        </Grid>

    </Grid>

</Window>