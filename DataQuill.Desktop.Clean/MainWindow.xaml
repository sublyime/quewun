<Window x:Class="DataQuillDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DataQuillDesktop.Views"
        Title="DataQuill Desktop - Modbus TCP Ready"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Height="50">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="DataQuill Desktop" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Name="StorageBtn" Content="Storage" Margin="20,0,0,0" Padding="15,5" Click="ShowStorage_Click"/>
                <Button Name="TestModbusBtn" Content="Test Modbus TCP" Margin="10,0,0,0" Padding="15,5" Click="TestModbus_Click" Background="Orange" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <TextBlock Name="WelcomeText" 
                       Text="DataQuill Desktop is working! Click Storage to see more options soon."
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            
            <TextBlock Name="StorageContent"
                       Text="Storage functionality will be added here."
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,50,0,0"
                       Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
