<UserControl x:Class="DataQuillDesktop.Views.DataSourcesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DataQuillDesktop.Converters">
        <UserControl.Resources>
                <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </UserControl.Resources>
        <Grid Background="White">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="LightBlue"
                        Padding="15">
                        <StackPanel>
                                <TextBlock Text="ðŸ”Œ Data Sources"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="DarkBlue"/>
                                <TextBlock Text="Manage data source connections for real-time data collection"
                                           FontSize="14"
                                           Foreground="DarkBlue"
                                           Margin="0,5,0,0"/>
                        </StackPanel>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="1"
                      Margin="15">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Data Sources List -->
                        <Border Grid.Column="0"
                                Background="LightGray"
                                CornerRadius="5"
                                Margin="0,0,10,0">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- List Header -->
                                        <Border Grid.Row="0"
                                                Background="DarkBlue"
                                                CornerRadius="5,5,0,0"
                                                Padding="10">
                                                <TextBlock Text="Data Sources"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="14"/>
                                        </Border>

                                        <!-- Data Sources List -->
                                        <ListBox Grid.Row="1"
                                                 Name="DataSourcesList"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Margin="5"
                                                 SelectionChanged="DataSourcesList_SelectionChanged">
                                                <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <StackPanel Margin="5"
                                                                            Background="White"
                                                                            MouseLeftButtonUp="DataSourceItem_Click">
                                                                        <TextBlock Text="{Binding Name}"
                                                                                   FontWeight="Bold"
                                                                                   FontSize="12"/>
                                                                        <TextBlock Text="{Binding InterfaceType}"
                                                                                   FontSize="10"
                                                                                   Foreground="DarkGray"/>
                                                                        <TextBlock Text="{Binding ProtocolType}"
                                                                                   FontSize="10"
                                                                                   Foreground="DarkGray"/>
                                                                        <Border Width="10"
                                                                                Height="10"
                                                                                CornerRadius="5"
                                                                                HorizontalAlignment="Right"
                                                                                VerticalAlignment="Top"
                                                                                Margin="0,-40,5,0">
                                                                                <Border.Background>
                                                                                        <SolidColorBrush Color="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"/>
                                                                                </Border.Background>
                                                                        </Border>
                                                                </StackPanel>
                                                        </DataTemplate>
                                                </ListBox.ItemTemplate>
                                        </ListBox>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="10">
                                                <Button Name="AddDataSourceBtn"
                                                        Content="Add"
                                                        Width="60"
                                                        Height="30"
                                                        Margin="5"
                                                        Click="AddDataSource_Click"/>
                                                <Button Name="EditDataSourceBtn"
                                                        Content="Edit"
                                                        Width="60"
                                                        Height="30"
                                                        Margin="5"
                                                        IsEnabled="False"
                                                        Click="EditDataSource_Click"/>
                                                <Button Name="DeleteDataSourceBtn"
                                                        Content="Delete"
                                                        Width="60"
                                                        Height="30"
                                                        Margin="5"
                                                        IsEnabled="False"
                                                        Click="DeleteDataSource_Click"/>
                                        </StackPanel>
                                </Grid>
                        </Border>

                        <!-- Configuration Panel -->
                        <Border Grid.Column="1"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                                <StackPanel Name="ConfigurationPanel"
                                                            Margin="20"
                                                            Visibility="Collapsed">

                                                        <!-- Basic Information -->
                                                        <GroupBox Header="Basic Information"
                                                                  Margin="0,0,0,15">
                                                                <Grid>
                                                                        <Grid.RowDefinitions>
                                                                                <RowDefinition Height="Auto"/>
                                                                                <RowDefinition Height="Auto"/>
                                                                                <RowDefinition Height="Auto"/>
                                                                                <RowDefinition Height="Auto"/>
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="120"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <Label Grid.Row="0"
                                                                               Grid.Column="0"
                                                                               Content="Name:"/>
                                                                        <TextBox Grid.Row="0"
                                                                                 Grid.Column="1"
                                                                                 Name="NameTextBox"
                                                                                 Margin="0,0,0,5"/>

                                                                        <Label Grid.Row="1"
                                                                               Grid.Column="0"
                                                                               Content="Description:"/>
                                                                        <TextBox Grid.Row="1"
                                                                                 Grid.Column="1"
                                                                                 Name="DescriptionTextBox"
                                                                                 TextWrapping="Wrap"
                                                                                 Height="60"
                                                                                 Margin="0,0,0,5"/>

                                                                        <Label Grid.Row="2"
                                                                               Grid.Column="0"
                                                                               Content="Interface:"/>
                                                                        <ComboBox Grid.Row="2"
                                                                                  Grid.Column="1"
                                                                                  Name="InterfaceComboBox"
                                                                                  Margin="0,0,0,5"
                                                                                  SelectionChanged="Interface_SelectionChanged"/>

                                                                        <Label Grid.Row="3"
                                                                               Grid.Column="0"
                                                                               Content="Protocol:"/>
                                                                        <ComboBox Grid.Row="3"
                                                                                  Grid.Column="1"
                                                                                  Name="ProtocolComboBox"
                                                                                  Margin="0,0,0,5"
                                                                                  SelectionChanged="Protocol_SelectionChanged"/>
                                                                </Grid>
                                                        </GroupBox>

                                                        <!-- Interface Configuration -->
                                                        <GroupBox Header="Interface Configuration"
                                                                  Name="InterfaceConfigGroup"
                                                                  Margin="0,0,0,15"
                                                                  Visibility="Collapsed">
                                                                <Grid>
                                                                        <!-- File Interface -->
                                                                        <StackPanel Name="FileConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                                <ColumnDefinition Width="Auto"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="File Path:"/>
                                                                                        <TextBox Grid.Row="0"
                                                                                                 Grid.Column="1"
                                                                                                 Name="FilePathTextBox"
                                                                                                 Margin="0,0,5,5"/>
                                                                                        <Button Grid.Row="0"
                                                                                                Grid.Column="2"
                                                                                                Content="Browse..."
                                                                                                Width="80"
                                                                                                Click="BrowseFile_Click"/>

                                                                                        <Label Grid.Row="1"
                                                                                               Grid.Column="0"
                                                                                               Content="File Pattern:"/>
                                                                                        <TextBox Grid.Row="1"
                                                                                                 Grid.Column="1"
                                                                                                 Name="FilePatternTextBox"
                                                                                                 Grid.ColumnSpan="2"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <CheckBox Grid.Row="2"
                                                                                                  Grid.Column="1"
                                                                                                  Name="WatchChangesCheckBox"
                                                                                                  Content="Watch for file changes"
                                                                                                  Margin="0,5"/>
                                                                                </Grid>
                                                                        </StackPanel>

                                                                        <!-- Network Interface (TCP/UDP) -->
                                                                        <StackPanel Name="NetworkConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="Host/IP:"/>
                                                                                        <TextBox Grid.Row="0"
                                                                                                 Grid.Column="1"
                                                                                                 Name="HostTextBox"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="1"
                                                                                               Grid.Column="0"
                                                                                               Content="Port:"/>
                                                                                        <TextBox Grid.Row="1"
                                                                                                 Grid.Column="1"
                                                                                                 Name="PortTextBox"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="2"
                                                                                               Grid.Column="0"
                                                                                               Content="Timeout (sec):"/>
                                                                                        <TextBox Grid.Row="2"
                                                                                                 Grid.Column="1"
                                                                                                 Name="TimeoutTextBox"
                                                                                                 Text="30"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <CheckBox Grid.Row="3"
                                                                                                  Grid.Column="1"
                                                                                                  Name="UseSSLCheckBox"
                                                                                                  Content="Use SSL/TLS"
                                                                                                  Margin="0,5"/>
                                                                                </Grid>
                                                                        </StackPanel>

                                                                        <!-- Serial Interface -->
                                                                        <StackPanel Name="SerialConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="Port:"/>
                                                                                        <ComboBox Grid.Row="0"
                                                                                                  Grid.Column="1"
                                                                                                  Name="SerialPortComboBox"
                                                                                                  Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="1"
                                                                                               Grid.Column="0"
                                                                                               Content="Baud Rate:"/>
                                                                                        <ComboBox Grid.Row="1"
                                                                                                  Grid.Column="1"
                                                                                                  Name="BaudRateComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="9600"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="19200"/>
                                                                                                <ComboBoxItem Content="38400"/>
                                                                                                <ComboBoxItem Content="57600"/>
                                                                                                <ComboBoxItem Content="115200"/>
                                                                                        </ComboBox>

                                                                                        <Label Grid.Row="2"
                                                                                               Grid.Column="0"
                                                                                               Content="Data Bits:"/>
                                                                                        <ComboBox Grid.Row="2"
                                                                                                  Grid.Column="1"
                                                                                                  Name="DataBitsComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="7"/>
                                                                                                <ComboBoxItem Content="8"
                                                                                                              IsSelected="True"/>
                                                                                        </ComboBox>

                                                                                        <Label Grid.Row="3"
                                                                                               Grid.Column="0"
                                                                                               Content="Parity:"/>
                                                                                        <ComboBox Grid.Row="3"
                                                                                                  Grid.Column="1"
                                                                                                  Name="ParityComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="None"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="Even"/>
                                                                                                <ComboBoxItem Content="Odd"/>
                                                                                                <ComboBoxItem Content="Mark"/>
                                                                                                <ComboBoxItem Content="Space"/>
                                                                                        </ComboBox>

                                                                                        <Label Grid.Row="4"
                                                                                               Grid.Column="0"
                                                                                               Content="Stop Bits:"/>
                                                                                        <ComboBox Grid.Row="4"
                                                                                                  Grid.Column="1"
                                                                                                  Name="StopBitsComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="One"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="OnePointFive"/>
                                                                                                <ComboBoxItem Content="Two"/>
                                                                                        </ComboBox>

                                                                                        <Label Grid.Row="5"
                                                                                               Grid.Column="0"
                                                                                               Content="Handshake:"/>
                                                                                        <ComboBox Grid.Row="5"
                                                                                                  Grid.Column="1"
                                                                                                  Name="HandshakeComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="None"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="XOnXOff"/>
                                                                                                <ComboBoxItem Content="RequestToSend"/>
                                                                                                <ComboBoxItem Content="RequestToSendXOnXOff"/>
                                                                                        </ComboBox>
                                                                                </Grid>
                                                                        </StackPanel>

                                                                        <!-- USB Interface -->
                                                                        <StackPanel Name="USBConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="Device ID:"/>
                                                                                        <ComboBox Grid.Row="0"
                                                                                                  Grid.Column="1"
                                                                                                  Name="USBDeviceComboBox"
                                                                                                  Margin="0,0,0,5"/>

                                                                                        <Button Grid.Row="1"
                                                                                                Grid.Column="1"
                                                                                                Content="Refresh USB Devices"
                                                                                                Click="RefreshUSBDevices_Click"
                                                                                                HorizontalAlignment="Left"/>
                                                                                </Grid>
                                                                        </StackPanel>
                                                                </Grid>
                                                        </GroupBox>

                                                        <!-- Protocol Configuration -->
                                                        <GroupBox Header="Protocol Configuration"
                                                                  Name="ProtocolConfigGroup"
                                                                  Margin="0,0,0,15"
                                                                  Visibility="Collapsed">
                                                                <Grid>
                                                                        <!-- Modbus Configuration -->
                                                                        <StackPanel Name="ModbusConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="Slave ID:"/>
                                                                                        <TextBox Grid.Row="0"
                                                                                                 Grid.Column="1"
                                                                                                 Name="SlaveIdTextBox"
                                                                                                 Text="1"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="1"
                                                                                               Grid.Column="0"
                                                                                               Content="Function Code:"/>
                                                                                        <ComboBox Grid.Row="1"
                                                                                                  Grid.Column="1"
                                                                                                  Name="FunctionCodeComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="01 - Read Coils"/>
                                                                                                <ComboBoxItem Content="02 - Read Discrete Inputs"/>
                                                                                                <ComboBoxItem Content="03 - Read Holding Registers"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="04 - Read Input Registers"/>
                                                                                        </ComboBox>
                                                                                </Grid>
                                                                        </StackPanel>

                                                                        <!-- MQTT Configuration -->
                                                                        <StackPanel Name="MQTTConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="Client ID:"/>
                                                                                        <TextBox Grid.Row="0"
                                                                                                 Grid.Column="1"
                                                                                                 Name="ClientIdTextBox"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="1"
                                                                                               Grid.Column="0"
                                                                                               Content="Topic:"/>
                                                                                        <TextBox Grid.Row="1"
                                                                                                 Grid.Column="1"
                                                                                                 Name="TopicTextBox"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="2"
                                                                                               Grid.Column="0"
                                                                                               Content="QoS Level:"/>
                                                                                        <ComboBox Grid.Row="2"
                                                                                                  Grid.Column="1"
                                                                                                  Name="QoSComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="0 - At most once"/>
                                                                                                <ComboBoxItem Content="1 - At least once"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="2 - Exactly once"/>
                                                                                        </ComboBox>
                                                                                </Grid>
                                                                        </StackPanel>

                                                                        <!-- API Configuration -->
                                                                        <StackPanel Name="APIConfig"
                                                                                    Visibility="Collapsed">
                                                                                <Grid>
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="120"/>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <Label Grid.Row="0"
                                                                                               Grid.Column="0"
                                                                                               Content="Endpoint URL:"/>
                                                                                        <TextBox Grid.Row="0"
                                                                                                 Grid.Column="1"
                                                                                                 Name="EndpointTextBox"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="1"
                                                                                               Grid.Column="0"
                                                                                               Content="API Key:"/>
                                                                                        <TextBox Grid.Row="1"
                                                                                                 Grid.Column="1"
                                                                                                 Name="ApiKeyTextBox"
                                                                                                 Margin="0,0,0,5"/>

                                                                                        <Label Grid.Row="2"
                                                                                               Grid.Column="0"
                                                                                               Content="Method:"/>
                                                                                        <ComboBox Grid.Row="2"
                                                                                                  Grid.Column="1"
                                                                                                  Name="ApiMethodComboBox"
                                                                                                  Margin="0,0,0,5">
                                                                                                <ComboBoxItem Content="GET"
                                                                                                              IsSelected="True"/>
                                                                                                <ComboBoxItem Content="POST"/>
                                                                                                <ComboBoxItem Content="PUT"/>
                                                                                                <ComboBoxItem Content="DELETE"/>
                                                                                        </ComboBox>
                                                                                </Grid>
                                                                        </StackPanel>
                                                                </Grid>
                                                        </GroupBox>

                                                        <!-- Authentication -->
                                                        <GroupBox Header="Authentication"
                                                                  Name="AuthGroup"
                                                                  Margin="0,0,0,15">
                                                                <Grid>
                                                                        <Grid.RowDefinitions>
                                                                                <RowDefinition Height="Auto"/>
                                                                                <RowDefinition Height="Auto"/>
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="120"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <Label Grid.Row="0"
                                                                               Grid.Column="0"
                                                                               Content="Username:"/>
                                                                        <TextBox Grid.Row="0"
                                                                                 Grid.Column="1"
                                                                                 Name="UsernameTextBox"
                                                                                 Margin="0,0,0,5"/>

                                                                        <Label Grid.Row="1"
                                                                               Grid.Column="0"
                                                                               Content="Password:"/>
                                                                        <PasswordBox Grid.Row="1"
                                                                                     Grid.Column="1"
                                                                                     Name="PasswordBox"
                                                                                     Margin="0,0,0,5"/>
                                                                </Grid>
                                                        </GroupBox>

                                                        <!-- Action Buttons -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Right"
                                                                    Margin="0,20,0,0">
                                                                <Button Name="TestConnectionBtn"
                                                                        Content="Test Connection"
                                                                        Width="120"
                                                                        Height="35"
                                                                        Margin="5"
                                                                        Click="TestConnection_Click"/>
                                                                <Button Name="SaveDataSourceBtn"
                                                                        Content="Save"
                                                                        Width="80"
                                                                        Height="35"
                                                                        Margin="5"
                                                                        Click="SaveDataSource_Click"/>
                                                                <Button Name="CancelBtn"
                                                                        Content="Cancel"
                                                                        Width="80"
                                                                        Height="35"
                                                                        Margin="5"
                                                                        Click="Cancel_Click"/>
                                                        </StackPanel>
                                                </StackPanel>

                                                <!-- Welcome Message -->
                                                <StackPanel Name="WelcomePanel"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center">
                                                        <TextBlock Text="ðŸ”Œ Data Sources Management"
                                                                   FontSize="24"
                                                                   FontWeight="Bold"
                                                                   Foreground="DarkBlue"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,10"/>
                                                        <TextBlock Text="Select a data source from the list or click 'Add' to create a new connection"
                                                                   FontSize="14"
                                                                   Foreground="Gray"
                                                                   HorizontalAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   TextAlignment="Center"
                                                                   MaxWidth="400"/>
                                                </StackPanel>
                                        </Grid>
                                </ScrollViewer>
                        </Border>
                </Grid>
        </Grid>
</UserControl>