<UserControl x:Class="DataQuillDesktop.Views.StorageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:DataQuillDesktop.ViewModels"
             xmlns:models="clr-namespace:DataQuillDesktop.Models.Storage"
             xmlns:converters="clr-namespace:DataQuillDesktop.Converters">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:AddEditHeaderConverter x:Key="AddEditHeaderConverter"/>

        <!-- Cloud Provider to Icon/Color Converter -->
        <Style x:Key="ProviderIconStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Provider}"
                             Value="AWS">
                    <Setter Property="Text"
                            Value="☁️"/>
                    <Setter Property="Foreground"
                            Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Provider}"
                             Value="GoogleCloud">
                    <Setter Property="Text"
                            Value="🌐"/>
                    <Setter Property="Foreground"
                            Value="Blue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Provider}"
                             Value="Azure">
                    <Setter Property="Text"
                            Value="⚡"/>
                    <Setter Property="Foreground"
                            Value="CornflowerBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Provider}"
                             Value="Oracle">
                    <Setter Property="Text"
                            Value="🏛️"/>
                    <Setter Property="Foreground"
                            Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Status to Color Converter -->
        <Style x:Key="StatusIndicatorStyle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="12"/>
            <Setter Property="Height"
                    Value="12"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                             Value="Connected">
                    <Setter Property="Fill"
                            Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="Disconnected">
                    <Setter Property="Fill"
                            Value="Gray"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="Connecting">
                    <Setter Property="Fill"
                            Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="Failed">
                    <Setter Property="Fill"
                            Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="Testing">
                    <Setter Property="Fill"
                            Value="Yellow"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#2196F3"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Margin"
                    Value="4"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="#CCCCCC"/>
                    <Setter Property="Foreground"
                            Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="#2196F3"/>
            <Setter Property="BorderBrush"
                    Value="#2196F3"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Margin"
                    Value="4"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="BorderBrush"
                            Value="#CCCCCC"/>
                    <Setter Property="Foreground"
                            Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="☁️ Cloud Storage Connections"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Connect to AWS, Google Cloud, Azure, and Oracle Cloud to access your data"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <TextBox x:Name="SearchBox"
                             Width="200"
                             Padding="8"
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"/>

                    <Button Content="🔄 Refresh"
                            Click="RefreshButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>

                    <Button Content="➕ Add Connection"
                            Click="AddConnectionButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Connections List -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0"
                            Background="#FAFAFA"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Provider"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Column="1"
                                       Text="Connection Name"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Column="2"
                                       Text="Status"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Column="3"
                                       Text="Actions"
                                       FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <!-- Connections List -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ConnectionsContainer">
                            <!-- Connections will be dynamically added here -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1"
                                x:Name="EmptyState"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="📂"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Foreground="#CCCCCC"/>
                        <TextBlock Text="No cloud connections configured"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="#666666"
                                   Margin="0,16,0,8"/>
                        <TextBlock Text="Click 'Add Connection' to get started with your first cloud provider"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Foreground="#999999"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Connection Details/Editor Panel -->
            <Border Grid.Column="2"
                    x:Name="EditPanel"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Panel Header -->
                        <TextBlock x:Name="PanelHeader"
                                   Text="Add New Connection"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Provider Selection -->
                        <StackPanel x:Name="ProviderSelectionPanel"
                                    Margin="0,0,0,20">
                            <TextBlock Text="Cloud Provider"
                                       FontWeight="Medium"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="ProviderComboBox"
                                      Padding="8"
                                      SelectionChanged="ProviderComboBox_SelectionChanged">
                                <ComboBoxItem Content="Amazon Web Services (AWS)"
                                              Tag="AWS"/>
                                <ComboBoxItem Content="Google Cloud Platform"
                                              Tag="GoogleCloud"/>
                                <ComboBoxItem Content="Microsoft Azure"
                                              Tag="Azure"/>
                                <ComboBoxItem Content="Oracle Cloud Infrastructure"
                                              Tag="Oracle"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Connection Form Container -->
                        <StackPanel x:Name="ConnectionFormContainer">
                            <!-- Dynamic form content will be added here -->
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,24,0,0">
                            <Button Content="Cancel"
                                    Click="CancelButton_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                            <Button Content="Save Connection"
                                    Click="SaveConnectionButton_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>