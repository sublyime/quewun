<Window x:Class="DataQuillDesktop.TestMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DataQuill Test"
        Height="600"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                Text="DataQuill Test - Sidebar Navigation"
                   FontSize="24"
                FontWeight="Bold"
                Margin="20"
                   HorizontalAlignment="Center"/>

        <!-- Main Content -->
        <Grid Grid.Row="1"
                Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <StackPanel Grid.Column="0"
                    Background="LightGray"
                    Margin="0,0,10,0">
                <TextBlock Text="Navigation"
                        FontWeight="Bold"
                        Margin="10"
                        FontSize="16"/>
                <Button Content="Dashboard"
                        Margin="5"
                        Padding="10"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Dashboard"/>
                <Button Content="Data Sources"
                        Margin="5"
                        Padding="10"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="DataSources"/>
                <Button Content="Storage"
                        Margin="5"
                        Padding="10"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Storage"/>
                <Button Content="Reports"
                        Margin="5"
                        Padding="10"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Reports"/>
            </StackPanel>

            <!-- Content Area -->
            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <StackPanel Margin="20">
                    <TextBlock Text="Current Section:"
                            FontWeight="Bold"
                            FontSize="16"/>
                    <TextBlock Text="{Binding CurrentSection}"
                            FontSize="20"
                            Foreground="Blue"
                            Margin="0,5,0,15"/>
                    <TextBlock Text="Click the sidebar buttons to test navigation!"
                            FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>