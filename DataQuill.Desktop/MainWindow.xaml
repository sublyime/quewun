<Window x:Class="DataQuill.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:DataQuill.Desktop.Views"
        xmlns:viewModels="clr-namespace:DataQuill.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                Mode="PrimaryMid"
                Padding="16"
                Height="64">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Database"
                            Width="24"
                            Height="24"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"/>
                    <TextBlock Text="DataQuill Desktop"
                            FontSize="18"
                            FontWeight="Bold"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Circle"
                            Width="12"
                            Height="12"
                                             Foreground="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                             VerticalAlignment="Center"
                            Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToStatusConverter}}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation -->
            <materialDesign:ColorZone Grid.Column="0"
                    Mode="Light"
                    Padding="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,16,0,16">
                        <!-- Dashboard -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Dashboard"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="16,12"
                                Height="48">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Dashboard"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Data Connections -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Connections"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="16,12"
                                Height="48">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Connection"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Data Sources"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Storage -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Storage"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="16,12"
                                Height="48">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Storage"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Storage"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Users -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Users"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="16,12"
                                Height="48">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMultiple"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Users"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Reports -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Reports"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="16,12"
                                Height="48">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileChart"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Reports"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="16,16"/>

                        <!-- Settings -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Settings"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="16,12"
                                Height="48">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Settings"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Settings"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:ColorZone>

            <!-- Content Area -->
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentViewModel}"
                            Margin="16">
                <ContentControl.Resources>
                    <!-- DataTemplates for ViewModels -->
                    <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                        <views:DashboardView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ConnectionsViewModel}">
                        <views:PlaceholderView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:StorageViewModel}">
                        <views:PlaceholderView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:UsersViewModel}">
                        <views:PlaceholderView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ReportsViewModel}">
                        <views:PlaceholderView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                        <views:PlaceholderView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2"
                Mode="PrimaryDark"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                        Text="Ready"
                        FontSize="12"
                        VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="Test Native Features"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Click="TestButton_Click"/>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</Window>
